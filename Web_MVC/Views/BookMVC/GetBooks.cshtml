@model IEnumerable<Web_MVC.Models.BookViewModel>

@{
    ViewBag.Title = "GetBooks";
}

<h2>GetBooks</h2>

<p>
    @Html.ActionLink("Lista de Autores", "GetAuthors","AuthorMVC")
</p>

<p>
    @Html.ActionLink("Registrar novo livro", "CreateBook")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ano)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Isbn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ano)
        </td>

        <td>
            @Html.ActionLink("Editar o livro", "EditBook", new { id = item.BookId }) |
            @Html.ActionLink("Deletar o livro", "DeleteBook", new { id = item.BookId })|
            @Html.ActionLink("Detalhes do livro", "DetailsBook", new { id = item.BookId })
        </td>
    </tr>
}

</table>
